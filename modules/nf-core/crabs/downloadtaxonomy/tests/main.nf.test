nextflow_process {

    name "Test Process CRABS_DOWNLOADTAXONOMY"
    script "../main.nf"
    process "CRABS_DOWNLOADTAXONOMY"

    tag "modules"
    tag "modules_nfcore"
    tag "crabs"
    tag "crabs/downloadtaxonomy"

    test("download") {

        when {
            params {
                module_args = "--exclude 'acc2taxid,taxdump'"
            }
            process {
                """
                input[0] = [ id:'test' ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("download - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [ id:'test' ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out,
                    path(process.out.versions[0]).yaml
                    ).match() }
            )
        }

    }

}
